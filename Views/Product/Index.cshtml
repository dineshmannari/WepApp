@model List<Product>

<h2>Product Listing</h2>

<a asp-action="Create">Create New</a>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var product in Model)
            {
                if (product != null)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.Price</td>
                        <td>
                            <!-- Edit Action Link -->
                            <a asp-action="Edit" asp-route-id="@product.Id">Edit</a>

                            <!-- Delete Form with Submit Button -->
                            <form asp-action="DeleteConfirmed" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td colspan="3">No products found.</td>
            </tr>
        }
    </tbody>
</table>
